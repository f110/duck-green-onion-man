<!DOCTYPE html>
<html lang="ja">
    <head>
        <title>メッセージ一覧的な</title>
        <link href="css/bootstrap.min.css" rel="stylesheet" media="screen">
        <link href="css/bootstrap-responsive.min.css" rel="stylesheet" media="screen">
        <style type="text/css">
        <!--
        form {
            margin: 0px;
        }
        -->
        </style>
    </head>
    <body>
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="brand" href="#">鴨ネギ男</a>
                <ul class="nav">
                    <li><a href="/update_list">Refresh User List</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container">
        <h1>メッセージ一覧</h1>
        <table class="table table-striped">
            <tr>
                <th></th>
                <th>送信者</th>
                <th>受信日</th>
                <th>タイトル</th>
                <th>-</th>
            </tr>
            % for my $message (@$messages) {
            <tr>
                <td><a href="/message?id=<%= $message->{id} %>">●</a></td>
                <td><%= $message->{sender} %></td>
                <td><%= $message->{title} %></td>
                <td><%= $message->{mark} %></td>
                <td>
                    <form action="/update" method="GET" class="form-inline">
                        <select name="team" class="span1">
                            <option value="A">A</option>
                            <option value="B">B</option>
                            <option value="C">C</option>
                            <option value="D">D</option>
                            <option value="E">E</option>
                            <option value="F">F</option>
                        </select>
                        チームが
                        <select name="q_number" class="span1">
                            <option value="1">Q1</option>
                            <option value="2">Q2</option>
                            <option value="3">Q3</option>
                            <option value="4">Q4</option>
                            <option value="5">Q5</option>
                            <option value="6">Q6</option>
                            <option value="7">Q7</option>
                            <option value="8">Q8</option>
                            <option value="9">Q9</option>
                            <option value="10">Q10</option>
                        </select>
                        を
                        <input type="text" name="point" class="span1">
                        点で
                        <input type="submit" class="btn btn-small btn-primary" value="正解！">
                    </form>
                </td>
            </tr>
            % }
        </table>
    </div>
    </body>
</html>
